# ============================================
# Carmen Assistant - Environment Configuration
# ============================================

# Backend Configuration
DESKTOP_BACKEND_PORT=8765
DESKTOP_BACKEND_HOST=127.0.0.1

# Frontend Configuration
DESKTOP_UI_PORT=5173

# Application Mode (development | production)
APP_ENV=production

# Ollama Configuration
OLLAMA_RUNTIME_DIR=./backend/runtime/ollama
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_DEFAULT_MODEL=qwen2.5:0.5b

# CORS Configuration (comma-separated origins, or * for all)
DESKTOP_FRONTEND_ORIGINS=*

# Development Mode (enable hot reload)
DESKTOP_DEV=0

# Logging Level (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO

